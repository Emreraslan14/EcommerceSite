
@{
    ViewData["Title"] = "_Layout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- My-account-area-Area -->
<section id="my-account_area" class="ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-3">
                <!-- Nav tabs -->
                <div class="dashboard_tab_button">
                    <ul role="tablist" class="nav flex-column dashboard-list">   
                        <li>
                            <a asp-area="UserPanel" asp-controller="Dashboard" asp-action="Index">
                                <i class="fas fa-cart-arrow-down"></i>Dashboard
                            </a>
                        </li>
                        <li>
                            <a asp-area="UserPanel" asp-controller="Order" asp-action="Index">
                                <i class="fas fa-cart-arrow-down"></i>Orders
                            </a>
                        </li>                        
                        <li>
                            <a asp-area="UserPanel" asp-controller="Address" asp-action="Index">
                                <i class="fas fa-map-marker-alt"></i>Addresses
                            </a>
                        </li>
                        <li>
                            <a asp-area="UserPanel" asp-controller="Account" asp-action="Index">
                                <i class="fas fa-user"></i>Account
                                details
                            </a>
                        </li>
                        <li>
                            <a asp-area="UserPanel" asp-controller="BeVendor" asp-action="Index">
                                <i class="fas fa-cloud-download-alt"></i>Become A Vendor
                            </a>
                        </li>
                        <li><a asp-area="UserPanel" asp-controller="Dashboard" asp-action="LogOut">
                            <i class="fas fa-sign-out-alt"></i>logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-9">
                <!-- Tab panes -->
                <div class="tab-content dashboard_content">
                    @RenderBody()                    
                </div>
            </div>
        </div>
    </div>
</section>

@RenderSection("Scriptss",false)