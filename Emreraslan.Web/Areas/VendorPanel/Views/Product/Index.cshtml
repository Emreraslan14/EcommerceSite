
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/VendorPanel/Views/Shared/_Layout.cshtml";
}

@model List<Emreraslan.Core.Entities.Product>;

<div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="vendor_order_boxed">
                <h4>All Products</h4>
                <div class="table-responsive">
                    <table class="table pending_table">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">Image</th>
                                <th scope="col">Product Name</th>
                                <th scope="col">Price</th>
                                <th scope="col">Discount(%)</th>
                                <th scope="col">Stock</th>
                                <th scope="col">Sales</th>
                                <th scope="col">Edit/Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var product in @Model)
                            {
                                <tr>
                                    <td scope="row"><img src=@product.PhotoPath alt=""></td>
                                    <td>@product.Name</td>
                                    <td>@product.Price</td>
                                    <td>@product.Discount</td>
                                    <td>@product.Stock</td>
                                    <td>0</td>
                                    <td>
                                        <a href="#!"><i class="fas fa-edit"></i></a> <a href="#!">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                            }                           
                        </tbody>
                    </table>
                </div>
                <div class="btn_right_table">
                    <a href="/VendorPanel/AddProduct/Index" class="theme-btn-one bg-black btn_sm">
                        Add
                        Product
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

